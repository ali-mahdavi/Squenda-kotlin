<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.GalleryActivity"
                android:background="@color/colorBackGround">
    <FrameLayout
            android:id="@+id/fr_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentTop="true"
            android:elevation="4dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/rl_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="8dp"
            >

                <TextView
                        android:id="@+id/txt_time_gallary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"

                        android:layout_marginLeft="20dp"
                        android:text="9:41"
                        android:textColor="@android:color/white"

                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_handset_connected"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_handset_connected"
                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_battery"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_battery"
                />


                <TextView
                        android:id="@+id/txt_tempreture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/white"
                        android:text="21C"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"
                        android:text="C"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="|"
                />
                <TextView
                        android:id="@+id/txt-date_gallary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="Sunday , March 10"
                />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back_gallary"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/rl_status"
                    android:layout_marginLeft="30dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginTop="10dp"
            />
        </RelativeLayout>

    </FrameLayout>
    <FrameLayout
            android:id="@+id/rl_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:elevation="8dp"
            android:alpha=".5"
            android:background="@color/black_overlay"
    >
        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:elevation="4dp"
                android:weightSum="1"
        >
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_profile_gallary"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_weight=".25"
                    android:layout_margin="38dp"
                    android:background="@drawable/ripple"
                    android:tint="@color/colorlightGray"
                    android:src="@drawable/ic_profile"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_home_gallary"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_weight=".25"
                    android:layout_margin="38dp"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_home"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_location_gallary"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_weight=".25"
                    android:layout_margin="38dp"
                    android:background="@drawable/ripple"
                    android:tint="@color/colorlightGray"
                    android:src="@drawable/ic_loc"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_setting_gallary"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight=".25"
                    android:layout_margin="38dp"
                    android:background="@drawable/ripple"
                    android:tint="@color/colorlightGray"
                    android:src="@drawable/ic_setting"/>

        </LinearLayout>
    </FrameLayout>
    <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gallery"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:layout_below="@+id/fr_status"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
    />

    <View
            android:id="@+id/view_1"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_below="@+id/txt_title"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="65dp"
    />
    <RelativeLayout
            android:id="@+id/rl_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:layout_below="@+id/view_1"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            android:padding="13dp"


    >
        <com.rey.material.widget.ImageView
                android:id="@+id/img_video"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ripple"
                android:src="@drawable/ic_video"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video"
                android:textSize="28sp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/img_video"
                android:layout_marginLeft="20dp"/>
        <com.rey.material.widget.ImageView
                android:id="@+id/img_arrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="@android:color/white"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        <TextView
                android:id="@+id/txt_video_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 MB"
                android:textSize="26sp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_toLeftOf="@+id/img_arrow"
                android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
            android:id="@+id/view_2"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_below="@+id/rl_video"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="65dp"
    />
    <RelativeLayout
            android:id="@+id/rl_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:layout_below="@+id/view_2"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            android:padding="13dp"

    >
        <com.rey.material.widget.ImageView
                android:id="@+id/img_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ripple"
                android:src="@drawable/ic_camera2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/img_photo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
        <com.rey.material.widget.ImageView
                android:id="@+id/img_arrow2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="@android:color/white"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        <TextView
                android:id="@+id/txt_photo_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 MB"
                android:textSize="26sp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_toLeftOf="@+id/img_arrow2"
                android:layout_marginRight="10dp"/>
    </RelativeLayout>

</RelativeLayout>
