<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.ictit.squenda.activities.VideoPreviewActivity"
                android:background="@color/colorBackGround">
    <FrameLayout
            android:id="@+id/rl_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:elevation="8dp"
            android:alpha=".5"
            android:background="@color/black_overlay"
    >
        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:elevation="4dp"
                android:weightSum="1"
        >
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_profile_video_preview"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_weight=".25"
                    android:layout_margin="38dp"
                    android:tint="@color/colorlightGray"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_profile"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_home_video_preview"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_weight=".25"
                    android:layout_margin="38dp"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_home"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_location_video_preview"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_weight=".25"
                    android:layout_margin="38dp"
                    android:tint="@color/colorlightGray"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_loc"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_setting_video_preview"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight=".25"
                    android:layout_margin="38dp"
                    android:tint="@color/colorlightGray"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_setting"/>

        </LinearLayout>
    </FrameLayout>
    <VideoView
            android:id="@+id/videoView1"
            android:layout_width="600dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"/>
</RelativeLayout>
