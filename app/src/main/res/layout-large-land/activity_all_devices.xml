                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/rectangle_icon_all_devices">
                        <androidx.appcompat.widget.AppCompatImageView
