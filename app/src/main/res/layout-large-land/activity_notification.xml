<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".activities.LivingRoomActivity"
                    android:background="@color/colorBackGround">
        <FrameLayout
                android:id="@+id/fr_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:layout_alignParentTop="true"
                android:elevation="4dp"
        >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/rl_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:padding="8dp"
                >

                    <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"

                            android:layout_marginLeft="20dp"
                            android:text="9:41"
                            android:textColor="@android:color/white"

                    />
                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_handset_connected"
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_handset_connected"
                    />
                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_battery"
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_battery"
                    />


                    <TextView
                            android:id="@+id/txt_tempreture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@android:color/white"
                            android:text="21C"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@android:color/white"
                            android:text="C"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@android:color/white"
                            android:text="|"
                    />
                    <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@android:color/white"
                            android:text="Sunday , March 10"
                    />
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_back_notify"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_below="@+id/rl_status"
                        android:layout_marginLeft="30dp"
                        android:tint="@android:color/white"
                        android:src="@drawable/ic_arrow_back_black_24dp"
                        android:layout_marginTop="10dp"
                />
            </RelativeLayout>

        </FrameLayout>
        <FrameLayout
                android:id="@+id/rl_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:elevation="4dp"
                android:alpha=".5"
                android:background="@color/black_overlay"
        >
            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:elevation="4dp"
                    android:weightSum="1"
            >
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_profile_notify"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_weight=".25"
                        android:layout_margin="38dp"
                        android:background="@drawable/ripple"
                        android:tint="@color/colorlightGray"
                        android:src="@drawable/ic_profile"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_home_notify"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_weight=".25"
                        android:background="@drawable/ripple"
                        android:layout_margin="38dp"
                        android:src="@drawable/ic_home"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_location_notify"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_weight=".25"
                        android:layout_margin="38dp"
                        android:background="@drawable/ripple"
                        android:tint="@color/colorlightGray"
                        android:src="@drawable/ic_loc"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_setting_notify"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight=".25"
                        android:layout_margin="38dp"
                        android:background="@drawable/ripple"
                        android:tint="@color/colorlightGray"
                        android:src="@drawable/ic_setting"/>

            </LinearLayout>
        </FrameLayout>
        <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:layout_below="@+id/fr_status"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="30dp"
        />
        <LinearLayout
                android:layout_below="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
        >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textSize="22sp"
                        android:textColor="@color/colorlightGray"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wifi connnection"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="5dp"
                        android:textSize="26sp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wifi connnection lost"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                />
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/img_1"
                            app:civ_border_width="2dp"
                            android:layout_gravity="center_vertical"
                            app:civ_border_color="#FF000000"/>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Schedule"
                                android:textSize="20sp"
                                android:textColor="@android:color/white"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Relaxing time schedule added by ali"
                                android:textSize="16sp"
                                android:textColor="@android:color/white"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yesterday"
                        android:textColor="@color/colorlightGray"
                        android:textSize="22sp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wifi connnection"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="26sp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wifi connnection lost"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                />
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/img_2"
                            app:civ_border_width="2dp"
                            android:layout_gravity="center_vertical"
                            app:civ_border_color="#FF000000"/>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Door lock"
                                android:textSize="20sp"
                                android:textColor="@android:color/white"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="front door was opened by sara"
                                android:textSize="16sp"
                                android:textColor="@android:color/white"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


