<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.LivingRoomActivity"
                android:background="@color/colorBackGround">
    <FrameLayout
            android:id="@+id/fr_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:layout_alignParentTop="true"
            android:elevation="4dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <LinearLayout
                    android:id="@+id/rl_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="8dp"
            >

                <TextView
                        android:id="@+id/txt_time_living"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"

                        android:layout_marginLeft="20dp"
                        android:text="9:41"
                        android:textColor="@android:color/white"

                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_handset_connected"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_handset_connected"
                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_battery"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_battery"
                />


                <TextView
                        android:id="@+id/txt_tempreture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/white"
                        android:text="21C"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"
                        android:text="C"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="|"
                />
                <TextView
                        android:id="@+id/txt_date_living"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="Sunday , March 10"
                />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back_living"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/rl_status"
                    android:layout_marginLeft="30dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginTop="10dp"
            />

        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
            android:id="@+id/rl_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:elevation="4dp"
            android:alpha=".5"
            android:background="@color/black_overlay"
    >
        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:elevation="4dp"
                android:weightSum="1"
        >
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_profile_living"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight=".25"
                    android:layout_margin="22dp"
                    android:tint="@color/colordarkGray"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_profile"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_home_living"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight=".25"
                    android:layout_margin="22dp"
                    android:tint="@color/colordarkGray"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_home"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_location_living"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight=".25"
                    android:layout_margin="22dp"
                    android:background="@drawable/ripple"
                    android:tint="@color/colordarkGray"
                    android:src="@drawable/ic_loc"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_setting_living"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight=".25"
                    android:layout_margin="22dp"
                    android:background="@drawable/ripple"

                    android:src="@drawable/ic_setting"/>

        </LinearLayout>
    </FrameLayout>
    <TextView
            android:id="@id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/fr_status"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:text="@string/data_and_storage"
            android:textColor="@android:color/white"
    />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_below="@+id/txt_title"
                  android:layout_toLeftOf="@id/rl_main_menu"
                  android:orientation="vertical"

    >
        <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"

                android:layout_marginTop="5dp"
                android:layout_marginLeft="55dp"
        />
        <RelativeLayout
                android:id="@+id/rl_keep_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:padding="4dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/keep_media"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"

                    android:layout_marginLeft="10dp"/>
            <com.rey.material.widget.ImageView
                    android:id="@+id/img_arrow1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forever"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:layout_toLeftOf="@+id/img_arrow1"
                    android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_below="@+id/rl_video"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="55dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colordarkGray"
                android:text="@string/store_msg"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45sp"
        />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="45sp"
        >
            <LinearLayout
                    android:id="@+id/rl_video_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >
                <View android:layout_width="200dp"
                      android:layout_height="10dp"
                      android:background="@color/colorBlue"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/video"
                        android:textColor="@color/colorBlue"
                        android:textSize="16sp"
                />

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/rl_photo_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/rl_video_progress"
            >
                <View android:layout_width="90dp"
                      android:layout_height="10dp"
                      android:background="@color/colorBlue2"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/photo"
                        android:textColor="@color/colorBlue2"
                        android:textSize="16sp"

                />

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/rl_free_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/rl_photo_progress"
            >
                <View android:layout_width="match_parent"
                      android:layout_height="10dp"
                      android:background="@color/colorlightGray"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="62MB of 64GB Used "
                        android:textColor="@color/colorlightGray"
                        android:layout_gravity="right"
                        android:textSize="16sp"

                />

            </LinearLayout>

        </RelativeLayout>

        <View
                android:id="@+id/view_1"

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="55dp"
        />
        <RelativeLayout
                android:id="@+id/rl_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/view_1"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:padding="4dp"


        >
            <com.rey.material.widget.ImageView
                    android:id="@+id/img_video"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_video"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_toRightOf="@+id/img_video"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
            <com.rey.material.widget.ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@android:color/white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
            <TextView
                    android:id="@+id/txt_video_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 MB"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:layout_toLeftOf="@+id/img_arrow"
                    android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <View
                android:id="@+id/view_2"

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_below="@+id/rl_video"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="55dp"
        />
        <RelativeLayout
                android:id="@+id/rl_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/view_2"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"


        >
            <com.rey.material.widget.ImageView
                    android:id="@+id/img_photo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_camera2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photo"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:layout_toRightOf="@+id/img_photo"
                    android:layout_marginLeft="10dp"/>
            <com.rey.material.widget.ImageView
                    android:id="@+id/img_arrow2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@android:color/white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
            <TextView
                    android:id="@+id/txt_photo_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 MB"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_arrow2"
                    android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_below="@+id/rl_video"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="55dp"
        />
        <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:padding="4dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storage"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"

                    android:layout_marginLeft="10dp"/>
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SD Card"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="40dp"/>
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_below="@+id/rl_video"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="55dp"
        />
        <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:padding="4dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reset"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorRed"

                    android:layout_marginLeft="10dp"/>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
