<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".activities.CallActivity"
                    android:background="@color/colorBackGround">
    <FrameLayout
            android:id="@+id/fr_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentTop="true"
            android:elevation="4dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/rl_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="8dp"
            >

                <TextView
                        android:id="@+id/txt_time_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"

                        android:layout_marginLeft="30dp"
                        android:text="9:41"
                        android:textColor="@android:color/white"

                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_handset_connected"
                        android:layout_width="26sp"
                        android:layout_height="26sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_handset_connected"


                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_battery"
                        android:layout_width="26sp"
                        android:layout_height="26sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_battery"

                />
                <TextView
                        android:id="@+id/txt_tempreture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/white"
                        android:text="21C"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:text="C"

                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="|"

                />
                <TextView
                        android:id="@+id/txt-date_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="Sunday , March 10"

                />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back_call"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/rl_status"
                    android:layout_marginLeft="40dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginTop="30dp"
            />
        </RelativeLayout>

    </FrameLayout>
        <FrameLayout
                android:id="@+id/rl_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:elevation="8dp"
                android:alpha=".5"
                android:background="@color/black_overlay"
        >
            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:elevation="4dp"
                    android:weightSum="1"
            >
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_call_out"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight=".25"
                        android:layout_margin="48dp"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_call_out"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_call_in"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight=".25"
                        android:layout_margin="48dp"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_call_in"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_mic"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight=".25"
                        android:layout_margin="48dp"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_mic"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_sound_off"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight=".25"
                        android:layout_margin="48dp"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_sound_off"/>

            </LinearLayout>
        </FrameLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_marginTop="90dp"
        >
            <EditText
                    android:id="@+id/txt_call"
                    android:layout_width="350dp"
                    android:layout_height="56dp"
                    android:maxLength="11"
                    android:textColor="@android:color/white"
                    android:textSize="35sp"
                    android:text=""

                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="40dp"
                    android:textAlignment="center"
                    android:editable="false"
                    tools:ignore="Deprecated" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                >
                    <Button
                            android:id="@+id/btn_1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="1"

                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                    <Button
                            android:id="@+id/btn_2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="2"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                    <Button
                            android:id="@+id/btn_3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="3"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                >
                    <Button
                            android:id="@+id/btn_4"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="4"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                    <Button
                            android:id="@+id/btn_5"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="5"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                    <Button
                            android:id="@+id/btn_6"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="6"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                >
                    <Button
                            android:id="@+id/btn_7"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="7"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                    <Button
                            android:id="@+id/btn_8"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="8"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                    <Button
                            android:id="@+id/btn_9"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="9"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                >
                    <Button
                            android:id="@+id/btn_star"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="*"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                    <Button
                            android:id="@+id/btn_0"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="0"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                    <Button
                            android:id="@+id/btn_sharp"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/ripple"
                            android:text="#"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:layout_margin="3dp"
                            android:textSize="35sp"
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginTop="20dp"
            >
                <View
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"/>
                <LinearLayout
                        android:id="@+id/rl_call"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        android:padding="13dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_call_green"
                >
                    <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_call"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorlightGray"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"
                            android:text="@string/call"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_del"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_remove"
                        android:background="@drawable/ripple"
                        android:layout_alignParentRight="true"


                        android:layout_weight="1.5"
                        android:layout_gravity="center_vertical"
                />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

