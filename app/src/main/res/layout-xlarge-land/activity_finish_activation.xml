<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackGround"
        tools:context=".activities.FinishActivationActivity">
    <RelativeLayout
            android:id="@+id/rl_logo"
            android:layout_width="260dp" android:layout_height="260dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_ellipse"
            android:layout_marginTop="150dp"
    >
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_check"
                android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
            android:id="@+id/txt_message"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/activated_message"
            android:textSize="28sp"
            android:layout_below="@+id/rl_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
    />

    <LinearLayout
            android:id="@+id/rl_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_message"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
    >
        <EditText
                android:id="@+id/txt_1"
                android:layout_width="140dp" android:layout_height="70dp"
                android:background="@drawable/rectangle_active_code_success"
                android:textSize="18sp"
                android:textColor="@color/colorlightGray"
                android:textAlignment="center"

        />

        <View
                android:layout_width="10dp" android:layout_height="2dp"
                android:background="@color/cardview_light_background"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
        />
        <EditText
                android:id="@+id/txt_2"
                android:layout_width="140dp" android:layout_height="70dp"
                android:background="@drawable/rectangle_active_code_success"
                android:textSize="18sp"
                android:textColor="@color/colorlightGray"
                android:textAlignment="center"

        />

        <View
                android:layout_width="10dp" android:layout_height="2dp"
                android:background="@color/cardview_light_background"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
        />
        <EditText
                android:id="@+id/txt_3"
                android:layout_width="140dp" android:layout_height="70dp"
                android:background="@drawable/rectangle_active_code_success"
                android:textSize="18sp"
                android:textColor="@color/colorlightGray"
                android:textAlignment="center"

        />

        <View
                android:layout_width="10dp" android:layout_height="2dp"
                android:background="@color/cardview_light_background"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
        />
        <EditText
                android:id="@+id/txt_4"
                android:layout_width="140dp" android:layout_height="70dp"
                android:background="@drawable/rectangle_active_code_success"
                android:textSize="18sp"
                android:textColor="@color/colorlightGray"
                android:textAlignment="center"

        />

        <View
                android:layout_width="10dp" android:layout_height="2dp"
                android:background="@color/cardview_light_background"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
        />
        <EditText
                android:id="@+id/txt_5"
                android:layout_width="140dp" android:layout_height="70dp"
                android:background="@drawable/rectangle_active_code_success"
                android:textSize="18sp"
                android:textColor="@color/colorlightGray"
                android:textAlignment="center"

        />


    </LinearLayout>
</RelativeLayout>