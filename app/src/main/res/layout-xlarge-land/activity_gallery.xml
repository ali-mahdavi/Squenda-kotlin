<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.ictit.squenda.activities.GalleryActivity"
                android:background="@color/colorBackGround">
    <FrameLayout
            android:id="@+id/rl_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:elevation="8dp"
            android:alpha=".5"
            android:background="@color/black_overlay"
    >
        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:elevation="4dp"
                android:weightSum="1"
        >
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_profile_gallary"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight=".25"
                    android:layout_margin="48dp"
                    android:background="@drawable/ripple"
                    android:tint="@color/colorlightGray"
                    android:src="@drawable/ic_profile"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_home_gallary"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight=".25"
                    android:layout_margin="48dp"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_home"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_location_gallary"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight=".25"
                    android:layout_margin="48dp"
                    android:background="@drawable/ripple"
                    android:tint="@color/colorlightGray"
                    android:src="@drawable/ic_loc"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_setting_gallary"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_weight=".25"
                    android:layout_margin="48dp"
                    android:background="@drawable/ripple"
                    android:tint="@color/colorlightGray"
                    android:src="@drawable/ic_setting"/>

        </LinearLayout>
    </FrameLayout>
    <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gallery"
            android:textColor="@android:color/white"
            android:textSize="54sp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="40dp"
    />


    <View
            android:id="@+id/view_1"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"
            android:layout_below="@+id/txt_title"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="75dp"
    />
    <RelativeLayout
            android:id="@+id/rl_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:layout_below="@+id/view_1"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp"
            android:padding="18dp"

    >
        <com.rey.material.widget.ImageView
                android:id="@+id/img_video"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/ripple"
                android:src="@drawable/ic_video"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video"
                android:textSize="32sp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/img_video"
                android:layout_marginLeft="30dp"/>
        <com.rey.material.widget.ImageView
                android:id="@+id/img_arrow"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:tint="@android:color/white"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        <TextView
                android:id="@+id/txt_video_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 MB"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_toLeftOf="@+id/img_arrow"
                android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
            android:id="@+id/view_2"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_below="@+id/rl_video"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="75dp"
    />
    <RelativeLayout
            android:id="@+id/rl_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:layout_below="@+id/view_2"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp"
            android:padding="18dp"


    >
        <com.rey.material.widget.ImageView
                android:id="@+id/img_photo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/ripple"
                android:src="@drawable/ic_camera2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/img_photo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:id="@+id/textView" />
        <com.rey.material.widget.ImageView
                android:id="@+id/img_arrow2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:tint="@android:color/white"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

        <TextView
                android:id="@+id/txt_photo_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView"
                android:layout_toStartOf="@+id/img_arrow2"
                android:text="0 MB"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
    </RelativeLayout>


</RelativeLayout>
