<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.FirstMenueActivity"
        android:background="@color/colorBackGround">
    <FrameLayout
            android:id="@+id/fr_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentTop="true"
            android:elevation="4dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/rl_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="8dp"
            >

                <TextView
                        android:id="@+id/txt_time_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"

                        android:layout_marginLeft="30dp"
                        android:text="9:41"
                        android:textColor="@android:color/white"

                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_handset_connected"
                        android:layout_width="26sp"
                        android:layout_height="26sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_handset_connected"


                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_battery"
                        android:layout_width="26sp"
                        android:layout_height="26sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_battery"

                />
                <TextView
                        android:id="@+id/txt_tempreture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/white"
                        android:text="21C"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:text="C"

                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="|"

                />
                <TextView
                        android:id="@+id/txt-date_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="Sunday , March 10"

                />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back_first"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/rl_status"
                    android:layout_marginLeft="40dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginTop="30dp"
            />
        </RelativeLayout>

    </FrameLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
    >
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_profile_first"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="95dip"
                android:background="@drawable/ripple"
                android:src="@drawable/ic_profile"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_home_first"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="95dip"
                android:background="@drawable/ripple"
                android:src="@drawable/ic_home"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_location_first"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="95dip"
                android:background="@drawable/ripple"
                android:src="@drawable/ic_loc"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_setting_first"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="95dip"
                android:background="@drawable/ripple"
                android:src="@drawable/ic_setting"/>
    </LinearLayout>
</RelativeLayout>


