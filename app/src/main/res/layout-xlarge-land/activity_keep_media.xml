<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent"
                tools:context=".activities.LivingRoomActivity"
                android:background="@color/colorBackGround">
    <FrameLayout
            android:id="@+id/fr_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:layout_alignParentTop="true"
            android:elevation="4dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <LinearLayout
                    android:id="@+id/rl_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="8dp"
            >

                <TextView
                        android:id="@+id/txt_time_living"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"

                        android:layout_marginLeft="20dp"
                        android:text="9:41"
                        android:textColor="@android:color/white"

                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_handset_connected"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_handset_connected"
                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_battery"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_battery"
                />


                <TextView
                        android:id="@+id/txt_tempreture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/white"
                        android:text="21C"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:text="C"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="|"
                />
                <TextView
                        android:id="@+id/txt_date_living"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="Sunday , March 10"
                />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back_living"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/rl_status"
                    android:layout_marginLeft="30dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginTop="10dp"
            />

        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
            android:id="@+id/rl_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:elevation="8dp"
            android:alpha=".5"
            android:background="@color/black_overlay"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:elevation="8dp"
                android:weightSum="1">
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_profile_home"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="45dp"
                    android:layout_weight=".25"
                    android:tint="@color/colordarkGray"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_profile"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_home_home"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="45dp"
                    android:layout_weight=".25"
                    android:tint="@color/colordarkGray"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_home"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_location_home"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="45dp"
                    android:layout_weight=".25"
                    android:tint="@color/colordarkGray"
                    android:src="@drawable/ic_loc"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_setting_home"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="45dp"
                    android:layout_weight=".25"
                    android:background="@drawable/ripple"

                    android:src="@drawable/ic_setting"/>
        </LinearLayout>
    </FrameLayout>
    <TextView
            android:id="@id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:layout_below="@+id/fr_status"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/rl_main_menu"
            android:text="@string/keep_media"
            android:textColor="@android:color/white"
    />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_below="@+id/txt_title"
                  android:layout_toLeftOf="@id/rl_main_menu"
                  android:orientation="vertical"

    >
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="20dp"
        />
        <RelativeLayout
                android:id="@+id/rl_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:padding="8dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one_week"
                    android:textSize="24sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"

                    android:layout_marginLeft="10dp"/>
            <com.rey.material.widget.ImageView
                    android:id="@+id/img_week_check"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:tint="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:tint="@color/colorBlue"
                    android:visibility="gone"
                    android:src="@drawable/ic_check"/>

        </RelativeLayout>
        <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_below="@+id/rl_video"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="20dp"
        />
        <RelativeLayout
                android:id="@+id/rl_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:padding="8dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one_month"
                    android:textSize="24sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"/>
            <com.rey.material.widget.ImageView
                    android:id="@+id/img_month_check"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:tint="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:tint="@color/colorBlue"
                    android:visibility="gone"
                    android:src="@drawable/ic_check"/>

        </RelativeLayout>

        <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="55dp"
        />

        <RelativeLayout
                android:id="@+id/rl_forever"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:padding="8dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/for_ever"
                    android:textSize="24sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"/>
            <com.rey.material.widget.ImageView
                    android:id="@+id/img_foreever_check"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:tint="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:tint="@color/colorBlue"
                    android:src="@drawable/ic_check"/>

        </RelativeLayout>

        <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="55dp"
        />


    </LinearLayout>


</RelativeLayout>
