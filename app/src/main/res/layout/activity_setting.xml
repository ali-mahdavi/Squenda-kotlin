<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

             tools:context=".activities.SettingActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:keepScreenOn="true"
              android:textColor="#33b5e5"
              android:textStyle="bold"
              android:textSize="50sp"
              android:gravity="center"
              android:text="@string/dummy_content"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.ictit.squenda.activities.LivingRoomActivity"
                    android:background="@color/colorBackGround">

        <FrameLayout
                android:id="@+id/rl_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:elevation="4dp"
                android:alpha=".5"
                android:background="@color/black_overlay"
        >
            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:weightSum="1"
                    android:elevation="4dp"
            >
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_profile"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight=".25"
                        android:layout_margin="20dp"
                        android:tint="@color/colordarkGray"
                        android:src="@drawable/ic_profile"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_home"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight=".25"
                        android:layout_margin="20dp"
                        android:tint="@color/colordarkGray"
                        android:src="@drawable/ic_home"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_location"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight=".25"
                        android:layout_margin="20dp"
                        android:tint="@color/colordarkGray"
                        android:src="@drawable/ic_loc"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_setting"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight=".25"
                        android:layout_margin="20dp"

                        android:src="@drawable/ic_setting"/>

            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
                android:id="@+id/setting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="15dp"


        >
            <TextView
                    android:id="@+id/txt_all_devices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:text="@string/settings"
                    android:textColor="@android:color/white"
            />
        </RelativeLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/rl_main_menu"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/setting_title">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="35dp"
            >
                <!--Add new devices-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_new_device"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:tint="@android:color/white"
                            android:src="@drawable/ic_add_circle_outline_black_24dp"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_new_device"
                            android:text="@string/add_new_device"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_new_device_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:id="@+id/txt_device_numbers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/img_new_device_row"
                            android:text="4"
                            android:textColor="@color/colordarkGray"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--My family-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_new_myfamily"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_peoples"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_new_myfamily"
                            android:text="@string/my_family"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_my_family_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:id="@+id/txt_family_numbers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/img_my_family_row"
                            android:text="5 persons"
                            android:textColor="@color/colordarkGray"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--Notifications-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_notifications"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:tint="@android:color/white"
                            android:src="@drawable/ic_notifications_none_black_24dp"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_notifications"
                            android:text="@string/notifications"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_notifications_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:id="@+id/txt_notifications_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/img_notifications_row"
                            android:text="3"
                            android:textColor="@color/colordarkGray"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>

                <!--Home Program-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_home_program"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_home2"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_home_program"
                            android:text="@string/home_program"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_home_program_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--Countries and Time-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_countries_and_time"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:tint="@android:color/white"
                            android:src="@drawable/ic_alarm_black_24dp"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_countries_and_time"
                            android:text="@string/countres_and_time"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_countries_and_time_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--Data and storage-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_data_and_storage"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_database"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_data_and_storage"
                            android:text="@string/data_and_storage"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_data_and_storage_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--Privacy and security-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_privacy_and_security"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_security"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_privacy_and_security"
                            android:text="@string/privacy_and_security"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_privacy_and_security_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:id="@+id/txt_privacy_and_security_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/img_privacy_and_security_row"
                            android:text="off"
                            android:textColor="@color/colordarkGray"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />
                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--Display,Brightness & Sounds-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_display_birgthness"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_display"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_display_birgthness"
                            android:text="@string/display_brigthness_sounds"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_display_brigthness_sounds_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--Emergency SOS-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_emergency_sos"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_sos"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_emergency_sos"
                            android:text="@string/emergency_sos"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_emergency_sos_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--Services-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_services"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_services"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_services"
                            android:text="@string/services"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_services_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--Language-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_language"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:tint="@android:color/white"
                            android:src="@drawable/ic_language_black_24dp"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_language"
                            android:text="@string/language"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_language_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:id="@+id/txt_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/img_language_row"
                            android:text="2"
                            android:textColor="@color/colordarkGray"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--space-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--help and support-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_help_support"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_help"
                            android:tint="@android:color/white"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_help_support"
                            android:text="@string/help_and_support"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_help_and_support_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/black"/>
                <!--about us-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_about_us"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:tint="@android:color/white"
                            android:src="@drawable/ic_about_us"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_about_us"
                            android:text="@string/about_us"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                    />

                    <com.rey.material.widget.ImageView
                            android:id="@+id/img_about_us_row"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/colordarkGray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</FrameLayout>