<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackGround"
        tools:context=".activities.LivingRoomActivity">
    <FrameLayout
            android:id="@+id/rl_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:alpha=".5"
            android:background="@color/black_overlay"
            android:elevation="4dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_profile_screen_saver"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:layout_weight=".25"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_profile"
                    android:tint="@color/colorlightGray" />
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_home_screen_saver"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:layout_weight=".25"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_home" />
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_location_screen_saver"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:layout_weight=".25"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_loc"
                    android:tint="@color/colorlightGray" />
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_setting_screen_saver"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="20dp"
                    android:layout_weight=".25"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_setting"
                    android:tint="@color/colorlightGray" />

        </LinearLayout>
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/cloudy" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_cloud" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"

                    android:textColor="@android:color/white"
                    android:textSize="64sp" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="c"
                    android:layout_gravity="top"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="70dp"
            >
            <TextView
                    android:id="@+id/txt_time_screen_saver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="9:41"
                    android:textColor="@android:color/white"
                    android:textSize="53sp"
                    />
            <TextView
                    android:id="@+id/txt_date_screen_saver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Sunday , March 10"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
