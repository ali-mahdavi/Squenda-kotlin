<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             
             tools:context=".activities.NotificationActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:keepScreenOn="true"
              android:textColor="#33b5e5"
              android:textStyle="bold"
              android:textSize="50sp"
              android:gravity="center"
              android:text="@string/dummy_content"/>

    <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.ictit.squenda.activities.LivingRoomActivity"
                    android:background="@color/colorBackGround">
        <FrameLayout
                android:id="@+id/rl_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:elevation="4dp"
                android:alpha=".5"
                android:background="@color/black_overlay"
        >
            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:elevation="4dp"
                    android:weightSum="1"
            >
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_profile_notify"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight=".25"
                        android:layout_margin="20dp"
                        android:tint="@color/colorlightGray"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_profile"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_home_notify"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight=".25"
                        android:background="@drawable/ripple"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_home"/>

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_location_notify"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="20dp"
                        android:layout_weight=".25"
                        android:tint="@color/colorlightGray"
                        android:src="@drawable/ic_loc" />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_setting_notify"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight=".25"
                        android:layout_margin="20dp"
                        android:background="@drawable/ripple"
                        android:tint="@color/colorlightGray"
                        android:src="@drawable/ic_setting"/>

            </LinearLayout>
        </FrameLayout>
        <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
        />
        <LinearLayout
                android:layout_below="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
        >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textColor="@color/colorlightGray"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wifi connnection"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wifi connnection lost"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                />
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/img_1"

                            android:layout_gravity="center_vertical"
                          />
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Schedule"
                                android:textSize="16sp"
                                android:textColor="@android:color/white"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Relaxing time schedule added by ali"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yesterday"
                        android:textColor="@color/colorlightGray"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wifi connnection"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wifi connnection lost"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                />
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/img_2"

                            android:layout_gravity="center_vertical"
                           />
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Door lock"
                                android:textSize="16sp"
                                android:textColor="@android:color/white"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="front door was opened by sara"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>