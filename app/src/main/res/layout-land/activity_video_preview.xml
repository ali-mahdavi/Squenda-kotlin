<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.VideoPreviewActivity"
                android:background="@color/colorBackGround">
    <FrameLayout
            android:id="@+id/fr_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentTop="true"
            android:elevation="4dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/rl_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="8dp"
            >

                <TextView
                        android:id="@+id/txt_time_video_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"

                        android:layout_marginLeft="20dp"
                        android:text="9:41"
                        android:textColor="@android:color/white"

                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_handset_connected"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_handset_connected"
                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_battery"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_battery"
                />


                <TextView
                        android:id="@+id/txt_tempreture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/white"
                        android:text="21C"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"
                        android:text="C"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="|"
                />
                <TextView
                        android:id="@+id/txt-date_video_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="Sunday , March 10"
                />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back_video_preview"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/rl_status"
                    android:layout_marginLeft="30dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginTop="10dp"
            />
        </RelativeLayout>

    </FrameLayout>
    <FrameLayout
            android:id="@+id/rl_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:elevation="4dp"
            android:alpha=".5"
            android:background="@color/black_overlay"
    >
        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:elevation="4dp"
                android:weightSum="1"
        >
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_profile_video_preview"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight=".25"
                    android:layout_margin="20dp"
                    android:background="@drawable/ripple"
                    android:tint="@color/colorlightGray"
                    android:src="@drawable/ic_profile"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_home_video_preview"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight=".25"
                    android:layout_margin="20dp"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_home"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_location_video_preview"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:layout_weight=".25"
                    android:tint="@color/colorlightGray"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_loc" />
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_setting_video_preview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight=".25"
                    android:layout_margin="20dp"
                    android:tint="@color/colorlightGray"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_setting"/>

        </LinearLayout>
    </FrameLayout>
    <com.tmall.ultraviewpager.UltraViewPager
            android:id="@+id/ultra_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackGround"
            android:layout_below="@+id/rl_video_setting"
            android:layout_toLeftOf="@+id/rl_main_menu"
        />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
                  android:id="@+id/rl_video_setting"
                  android:layout_below="@+id/fr_status"
                  android:layout_toLeftOf="@+id/rl_main_menu"
    >

    <LinearLayout
            android:id="@+id/indicator_setting"
            android:layout_width="match_parent"
            android:layout_height="40dp"

          >

        <Spinner
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />

        <Spinner
                android:id="@+id/indicator_gravity_hor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1" />

        <Spinner
                android:id="@+id/indicator_gravity_ver"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" />

        <Button
                android:id="@+id/indicator_build"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Apply" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/indicator_setting">

        <CheckBox
                android:id="@+id/loop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Enable Loop" />

        <CheckBox
                android:id="@+id/autoscroll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Auto Scroll" />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
