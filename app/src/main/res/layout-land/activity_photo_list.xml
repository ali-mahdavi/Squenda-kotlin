<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.LivingRoomActivity"
                android:background="@color/colorBackGround">
    <FrameLayout
            android:id="@+id/fr_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentTop="true"
            android:elevation="4dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/rl_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="8dp"
            >

                <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"

                        android:layout_marginLeft="20dp"
                        android:text="9:41"
                        android:textColor="@android:color/white"

                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_handset_connected"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_handset_connected"
                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_battery"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_battery"
                />


                <TextView
                        android:id="@+id/txt_tempreture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/white"
                        android:text="21C"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"
                        android:text="C"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="|"
                />
                <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:text="Sunday , March 10"
                />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/rl_status"
                    android:layout_marginLeft="30dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginTop="10dp"
            />
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/rl_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:elevation="4dp"
            android:alpha=".5"
            android:background="@color/black_overlay"
    >
        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
        >
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_profile_photo_list"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight=".25"
                    android:layout_margin="20dp"
                    android:tint="@color/colorlightGray"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_profile"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_home_photo_list"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight=".25"
                    android:layout_margin="20dp"
                    android:background="@drawable/ripple"
                    android:src="@drawable/ic_home"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_location_photo_list"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:layout_weight=".25"
                    android:background="@drawable/ripple"
                    android:tint="@color/colorlightGray"
                    android:src="@drawable/ic_loc"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_setting_photo_list"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight=".25"
                    android:layout_margin="20dp"
                    android:background="@drawable/ripple"
                    android:tint="@color/colorlightGray"
                    android:src="@drawable/ic_setting"/>

        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fr_status"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/rl_main_menu">
        <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photes"
                android:textColor="@android:color/white"
                android:textSize="22sp"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_trash"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ripple"
                android:tint="@android:color/white"
                android:src="@drawable/ic_trash"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_share"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_toLeftOf="@+id/btn_trash"
                android:layout_marginRight="10dp"
                android:tint="@android:color/white"
                android:background="@drawable/ripple"
                android:src="@drawable/ic_share"/>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_title"
            android:layout_margin="15dp"
            android:layout_toLeftOf="@id/rl_main_menu">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
