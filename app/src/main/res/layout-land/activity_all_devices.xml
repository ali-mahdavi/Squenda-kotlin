<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#0099cc"
             tools:context=".activities.AllDevicesActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:keepScreenOn="true"
              android:textColor="#33b5e5"
              android:textStyle="bold"
              android:textSize="50sp"
              android:gravity="center"
              android:text="@string/dummy_content"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.ictit.squenda.activities.AllDevicesActivity"
                    android:background="@color/colorBackGround">
        <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_all_devices"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
        />
        <FrameLayout
                android:id="@+id/rl_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:elevation="4dp"
                android:alpha=".5"
                android:background="@color/black_overlay"
        >

            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:elevation="4dp"
                    android:weightSum="1"
            >
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_profile_all"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight=".25"
                        android:layout_margin="20dp"
                        android:tint="@color/colordarkGray"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_profile"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_home_all"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight=".25"
                        android:layout_margin="20dp"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_home"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_location_all"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight=".25"
                        android:layout_margin="20dp"
                        android:tint="@color/colordarkGray"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_loc"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_setting_all"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_weight=".25"
                        android:layout_margin="20dp"
                        android:tint="@color/colordarkGray"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_setting"/>

            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
                android:id="@+id/my_alldevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="15dp"


        >
            <TextView
                    android:id="@+id/txt_all_devices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="@string/all_devices"
                    android:textColor="@android:color/white"
            />
            <TextView
                    android:id="@+id/txt_all_devices_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_all_devices"
                    android:textSize="24sp"
                    android:layout_marginLeft="40dp"
                    android:text="45"
                    android:textColor="@android:color/white"
            />
            <LinearLayout
                    android:id="@+id/rl_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_call"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="@string/call"
                        android:textColor="@color/colordarkGray"
                />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/rl_main_menu"
                android:layout_below="@+id/my_alldevices"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20sp"
        >
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:weightSum="3">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_icon_all_devices_small">
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_motion"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/motion_sensor"
                                android:textSize="12sp"
                                android:textColor="@color/colorlightGray"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlue"

                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/devices"
                                    android:textColor="@color/colordarkGray"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="3dp"

                            />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_icon_all_devices_small">
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_lighting"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lighting"
                                android:textSize="12sp"
                                android:textColor="@color/colorlightGray"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlue"

                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/devices"
                                    android:textColor="@color/colordarkGray"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="3dp"

                            />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_icon_all_devices_small">
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_fan"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fan"
                                android:textSize="12sp"
                                android:textColor="@color/colorlightGray"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlue"

                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/devices"
                                    android:textColor="@color/colordarkGray"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="7dp"

                            />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:weightSum="3">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_icon_all_devices_small">
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_smok_alarm"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/smoke_alarm"
                                android:textSize="12sp"
                                android:textColor="@color/colorlightGray"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlue"

                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/devices"
                                    android:textColor="@color/colordarkGray"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="3dp"

                            />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/ripple"
                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_icon_all_devices_small">
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="18sp"
                                android:layout_height="18sp"
                                android:src="@drawable/ic_curtain"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/curtain"
                                android:textSize="12sp"
                                android:textColor="@color/colorlightGray"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlue"

                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/devices"
                                    android:textColor="@color/colordarkGray"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="2dp"

                            />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_icon_all_devices_small">
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_radiator"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/radiator"
                                android:textSize="12sp"
                                android:textColor="@color/colorlightGray"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlue"

                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/devices"
                                    android:textColor="@color/colordarkGray"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="7dp"

                            />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_icon_all_devices_small">
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_windows_door"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                    >
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                        >
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/windows_and_door"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorlightGray"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlue"

                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/devices"
                                    android:textColor="@color/colordarkGray"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="3dp"

                            />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_icon_all_devices_small">
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_temprature"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tempretur"
                                android:textSize="12sp"
                                android:textColor="@color/colorlightGray"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlue"

                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/devices"
                                    android:textColor="@color/colordarkGray"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="3dp"

                            />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle_icon_all_devices_small">
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_camera"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/camera"
                                android:textSize="12sp"
                                android:textColor="@color/colorlightGray"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlue"

                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/devices"
                                    android:textColor="@color/colordarkGray"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="7dp"

                            />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>




    </RelativeLayout>
</FrameLayout>